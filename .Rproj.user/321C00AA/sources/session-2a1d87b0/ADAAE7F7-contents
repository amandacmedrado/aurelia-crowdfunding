/* Configuração base para colunas */
.col-container {
  display: flex;
  flex-wrap: wrap; /* Permite que os itens se movam para a próxima linha se não houver espaço suficiente */
  gap: 20px; /* Adiciona espaço entre as colunas */
  background-color: #fff;
  border-radius: 5px;
}

.col-container > div {
  flex: 1; /* Faz com que cada div ocupe o mesmo espaço disponível */
  padding: 10px; /* Espaçamento interno opcional */
  box-sizing: border-box; /* Inclui o padding e a borda no tamanho total do elemento */
  min-width: 200px; /* Define uma largura mínima para cada coluna */
}

/* Ajustes para telas menores (por exemplo, tablets e celulares) */
@media (max-width: 768px) {
  .col-container > div {
    flex: 1 1 100%; /* Cada div ocupa 100% da largura do contêiner */
  }
}

/* Ajustes para telas muito pequenas (por exemplo, celulares) */
@media (max-width: 480px) {
  .col-container {
    gap: 10px; /* Reduz o espaço entre as colunas para telas pequenas */
  }
  .col-container > div {
    padding: 5px; /* Reduz o padding interno para telas pequenas */
  }
}

